<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de turmas</title>
    <link rel="stylesheet" href="style/paginas.css">
    <link rel="stylesheet" href="style/header.css" />
    <link rel="stylesheet" href="style/footer.css">
    <link rel="stylesheet" href="style/modal.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="icon" href="img/logocec.png">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>

  <%- include ('partials/header') %>

    <main>
      <section>
          <div id="segundaHeader">
            <div id="Titulo">
              <h1>Turmas</h1>
            </div>
            <div id="botoes">
              <input class="botoes" id="botaoPesquisar" type="text" placeholder="Pesquisar" value="">
              <button class="botoes" id="botaoAdicionar" onclick="OpenModalSala()"><img id="add-icon"  src="img/add.png" width="11px">Adicionar</button>
              <button class="botoes" id="botaoExportar" onclick="ExportToExcel()"> <img id="excelPicture" src="img/excel-i.png"> Exportar</button>
            </div>
          </div>
          <br>
          <hr class="style-one">
          <div id="FiltrosSection">
            <h3>Filtros:</h3>
            <select class="selectBox" name="setor" id="setor">
              <option disabled selected>Setor</option>
              <option value="tiead">TI/EAD</option>
              <option value="operacional">Operacional</option>
            </select>
            <select class="selectBox" name="categoria" id="categoria">
              <option disabled selected>Turma</option>
              <option value="tiead">Autoplay</option>
              <option value="operacional">Autocode</option>
            </select>
            <select class="selectBox" name="dataInicio" id="dataInicio">
              <option value="">Data Inicio</option>
            </select>
            <select class="selectBox" name="dataFim" id="dataFim">
              <option value="">Data Fim</option>
            </select>
            <select class="selectBox" name="maximoItensPagina" id="maximoItensPagina">
              <option value="10">10 por página</option>
              <option value="30">30 por página</option>
            </select>
          </div>
      </section>

      <section>
        <div id="myModal" class="modal">
          <div class="modal-content">
            <div class="modal-header">
              <h1 id="titulo-modal">Cadastrar Turma</h1>
              <span class="close">&times;</span>
            </div>
            <div class="form" required>
              <label for="setor">Turma</label>
              <select name="select" id="Setor" required>
                <option value="valor1">Autoplay</option>
              </select>
            </div>
            <div class="form" required>
              <label for="setor">Setor</label>
              <select name="select" id="Setor" required>
                <option value="valor1">Operacional</option>
                <option value="valor2">Líderança</option>
                <option value="valor3">Ead/Ti</option>
                <option value="valor3">Call Center</option>
              </select>
            </div>
            <div class="form">
              <label for="abreviacao" class="Titulo-Campo">Data Inicio:</label>
              <input type="date" id="dataInicio" name="dataInicio">
            </div>
            <div class="form">
              <label for="abreviacao" class="Titulo-Campo">Data Fim:</label>
              <input type="date" id="dataFim" name="dataFim">
            </div>
            <div class="form">
              <label for="alunos" class="Titulo-Campo">Número de alunos:</label>
              <input type="number" id="alunos" class="Campo-Modal-Grande" placeholder="15" required />
            </div>

            <div class="modal-footer">
              <div>
                <button id="botaoCancelar">Cancelar</button>
              </div>
              <div>
                <button id="botaoConfirmar" onclick="addArea()">Confirmar</button>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section>
        <table id="tbl">
          <tr id="atributos">
            <th>Turma</th>
            <th>Setor</th>
            <th>Data Inicio</th>
            <th>Data Fim</th>
            <th>Alunos</th>
            <th></th>
          </tr>
          <tr class="tableRow">
            <td>Autoplay</td>
            <td>TI/EAD</td>
            <td>20/09/2021</td>
            <td>02/03/2022</td>
            <td>14</td>
            <td>
              <button class="crud" id="botaoEditar"><img src="img/edit.png"  width="16px" height="16px"></button >
              <button class="crud" id="botaoApagar" onclick='removeLinha(this)'><img src="img/delete.png" width="17px" height="17px"></button>
            </td>
          </tr>
          <tr class="tableRow">
            <td>Autolíder</td>
            <td>Liderança</td>
            <td>21/04/2020</td>
            <td>04/07/2020</td>
            <td>10</td>
            <td>
              <button class="crud" id="botaoEditar"><img src="img/edit.png"  width="16px" height="16px"></button >
              <button class="crud" id="botaoApagar" onclick='removeLinha(this)'><img src="img/delete.png" width="17px" height="17px"></button>
            </td>
          </tr>
        </table>
      </section>
    </main>
    <%- include ('partials/footer') %>

