<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de pilares</title>

    <link rel="stylesheet" href="style/paginas.css">
    <link rel="stylesheet" href="style/header.css" />
    <link rel="stylesheet" href="style/footer.css">
    <link rel="stylesheet" href="style/modal.css">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="icon" href="img/logocec.png">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>
    
  <%- include ('partials/header') %>

    <main>
      <section>
          <div id="segundaHeader">
            <div id="Titulo">
              <h1>Pilares</h1>
            </div>
            <div id="botoes">
              <input class="botoes" id="botaoPesquisar" type="text" placeholder="Pesquisar" value="">
              <button class="botoes" id="botaoAdicionar" onclick="OpenModalSala()"><img id="add-icon"  src="img/add.png" width="11px">Adicionar</button>
              <button class="botoes" id="botaoExportar" onclick="ExportToExcel()"> <img id="excelPicture" src="img/excel-i.png"> Exportar</button>
            </div>
          </div> 
          <br>
          <hr class="style-one">
          <div id="FiltrosSection">
            <h3>Filtros:</h3>
            <select class="selectBox" name="filtroSetor" id="filtroSetor">
              <option disabled selected>Setor</option>
              <option value="sala1">TI/EAD</option>
              <option value="sala2">Operacional</option>
              <option value="sala3">Call Center</option>
              <option value="sala4">Líderança</option>
            </select>
            <select class="selectBox" name="maximoItensPagina" id="maximoItensPagina">
              <option value="10">10 por página</option>
              <option value="30">30 por página</option>
            </select>
          </div>
      </section>

      <section>
        <div id="myModal" class="modal">
          <div class="modal-content">
            <div class="modal-header">
              <h1 id="titulo-modal">Cadastrar Turma</h1>
              <span class="close">&times;</span>
            </div>
            <div class="form">
              <label for="categoria" class="Titulo-Campo">Nova Turma:</label>
              <input type="text" id="categoria" class="Campo-Modal-Grande" placeholder="Autoplay" required />
            </div>
            <div class="form">
              <label for="setor" class="Titulo-Campo">Setor:</label>
              <div class="Campo-seletor-Modal-Pequeno" required>
                <select name="select" id="setor" required>
                  <option value="Operacional">Operacional</option>
                  <option value="Líderança">Líderança</option>
                  <option value="EAD/TI">EAD/TI</option>
                  <option value="Call Center">Call Center</option>
                </select>
              </div>
            </div>
            <div class="modal-footer">
              <div>
                <button id="botaoCancelar">Cancelar</button>
              </div>
              <div>
                <button id="botaoConfirmar" onclick="addCategoria()">Confirmar</button>
              </div>
            </div>
          </div>
        </div>
      </section>
      
      <section>
        <table id="tbl">
          <tr id="atributos">
            <th>Turma</th>
            <th>Setor</th>
            <th></th>
          </tr>
          <tr class="tableRow">
            <td class="categoria">Autoplay</td>
            <td>TI/EAD</td>
            <td>
              <button class="crud" id="botaoEditar"><img src="img/edit.png"  width="16px" height="16px"></button >
              <button class="crud" id="botaoApagar" onclick='removeLinha(this)'><img src="img/delete.png" width="17px" height="17px"></button>
            </td>
          </tr>
          <tr class="tableRow">
            <td class="categoria">Autolíder</td>
            <td>Líderança</td>
            <td>
              <button class="crud" id="botaoEditar"><img src="img/edit.png"  width="16px" height="16px"></button >
              <button class="crud" id="botaoApagar" onclick='removeLinha(this)'><img src="img/delete.png" width="17px" height="17px"></button>
            </td>
          </tr>
          <tr class="tableRow">
            <td class="categoria">Autocode</td>
            <td>TI/EAD</td>
            <td>
              <button class="crud" id="botaoEditar"><img src="img/edit.png"  width="16px" height="16px"></button >
              <button class="crud" id="botaoApagar" onclick='removeLinha(this)'><img src="img/delete.png" width="17px" height="17px"></button>
            </td>
          </tr>
          <tr class="tableRow">
            <td class="categoria">Agente de televendas</td>
            <td>Call Center</td>
            <td>
              <button class="crud" id="botaoEditar"><img src="img/edit.png"  width="16px" height="16px"></button >
              <button class="crud" id="botaoApagar" onclick='removeLinha(this)'><img src="img/delete.png" width="17px" height="17px"></button>
            </td>
          </tr>
        </table>
      </section>

    </main>
    <%- include ('partials/footer') %>